<h1><%= @genre.name %> movies</h1>

<%= render 'shared/errors', object: @genre %>


<% if current_user_admin? %>
  <section class="admin">
    <%= render 'form', genre: @genre %>
    <%= button_to 'delete genre', nil, method: :delete %>
  </section>
<% end %>

<ul>
  <% @movies.each do |movie| %>
    <li><%= link_to movie.title, movie %></li>
  <% end %>
</ul>
